.ProjectTitle
  position absolute
  top -20vh
  width 384px
  height 54px

  &-number-container,
  &-text
    display inline-block

  &-number-container,
  &-text-bottom
    color grey

  &-number-container
    @extends .font-serif
    height 100%
    font-size 3em
    overflow hidden
    width 43px
    position relative
    // bottom 5px
    margin-right 10px
    text-align right

  &-text
    overflow hidden
    margin-left 11px
    height 82%

  &-text-top
    text-transform uppercase
    font-size 0.95em
    letter-spacing 3px
    margin-bottom 5px

  &-text-bottom
    @extends .font-serif-italic
    font-size 0.8em
    letter-spacing 2px

    span
      color white
      text-transform uppercase

  &-separator
    position absolute
    top 6px
    left 52px
    width 3px
    height 38px
    background white
    display block
    transform-origin center bottom
    transform scaleY(0)

  &-line
    position absolute
    top 6px
    left 50px
    width 2px
    height 260px
    background $grey
    display block
    transform-origin center bottom
    transform scaleY(0)

.ProjectTitle.reverse
  .ProjectTitle-text
    width calc(100% - 64px)
    position relative
    top 9px
    margin-left 0
    text-align right

  .ProjectTitle-number-container
    margin-right 0
    float right
    top -3px

  .ProjectTitle-separator
    left initial
    right 52px

  .ProjectTitle-line
    left initial
    right 50px