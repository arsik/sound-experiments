.Sheet
  position relative
  top 50%
  transform translateY(-50%)

  &-line
    display block
    margin-bottom 30px
    width 100%
    height 1px
    background $grey

    &:last-child
      margin-bottom 0

  &-note-container
    position absolute
    top 0
    left 50%
    margin 0 auto
    width 98%
    height 100%
    max-width 1280px
    transform translateX(-50%)