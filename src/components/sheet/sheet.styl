.Sheet
  position relative
  top 50%
  transform translateY(-50%)

  &-line
    display block
    margin-bottom 30px
    width 100%
    height 1px
    background $grey

    &:last-child
      margin-bottom 0

  &-note-container
    position absolute
    top 0
    left 50%
    margin 0 auto
    width 85%
    height 100%
    transform translateX(-50%)

    a:visited .Note-point
      background #D0D0D0 !important