.About
  width 470px
  margin auto
  position relative
  top 50%
  transform translateY(-50%)
  text-align left
  line-height 1.4
  letter-spacing 1.5px
  font-size 1.15em

  p
    margin-bottom 30px

    &:last-child
      margin-bottom 0

  a
    color $grey
    display inline-block
    transition color 0.5s ease-out-expo

    &:hover
      color white

      &:after
        transform-origin center left
        transform scaleX(1)

  a:after
    content ''
    display block
    position relative
    bottom -4px
    width 100%
    height 3px
    background white
    transition transform 0.5s ease-out-expo
    transform-origin center right
    transform scaleX(0)