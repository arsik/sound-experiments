@import 'font-face'

// latine fonts
font-face('Brandon regular', 'brandon-regular', '/assets/fonts/brandon/regular')
font-face('Brandon bold', 'brandon-bold', '/assets/fonts/brandon/bold')
font-face('Didot regular', 'didot', '/assets/fonts/didot/regular')
font-face('Didot italic', 'didot-italic', '/assets/fonts/didot/italic')

.font-default
  font-family 'Brandon regular'
  @extends .smooth-font

.font-default-bold
  font-family 'Brandon bold'
  @extends .smooth-font

.font-serif
  font-family 'Didot regular'
  @extends .smooth-font

.font-serif-italic
  font-family 'Didot italic'
  @extends .smooth-font

// Ico Font

font-face('icomoon', 'icomoon', '/assets/fonts/icofont')

[class^="icon-"],[class*=" icon-"]
  font-family: 'icomoon'
  speak: none
  font-style: normal
  font-weight: normal
  font-variant: normal
  text-transform: none
  line-height: 1
 

.icon-icon_sound:before
  content: "\e900"

