/*======================================================================
    MIXINS & EXTENDS
======================================================================*/
@import '../../node_modules/stylus-reset'
@import '../../node_modules/stylus-media-queries'
@import '../../node_modules/stylus-easing'
@import '../../node_modules/brindille-stylus-extends'

/*======================================================================
    BASE
======================================================================*/
reset()
@import 'config/*'

html,
body,
#view
  @extends .full-size

body
  @extends .font-default-bold
  position relative
  margin 0
  background url('/assets/images/background.jpg')
  background-position 50% 50%
  background-size cover
  color #DEDEDE
  overflow-x hidden
  overflow-y scroll

#symbols
  display none

.hidden
  visibility hidden

/*======================================================================
    COMPONENTS
======================================================================*/
@import '../layouts/**/*'
@import '../sections/**/*'
@import '../components/**/*'