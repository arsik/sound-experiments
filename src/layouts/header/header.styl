.Header
  position absolute
  top 10vh
  left 50%
  z-index 1
  transform translateX(-50%)
  width 100%

  h1
    font-size 1em
    color $grey
    text-transform uppercase
    letter-spacing 4px
    text-align center

    span
      color white

  &-about
    position absolute
    top 0
    right 5.5vw
    display inline-block
    text-transform uppercase
    color $grey
    transition color 0.5s ease-out-expo

    &:hover
      color white

      &:after
        transform-origin center left
        transform scaleX(1)

    &:after
      content ''
      display block
      position relative
      bottom -4px
      width 100%
      height 3px
      background white
      transition transform 0.5s ease-out-expo
      transform-origin center right
      transform scaleX(0)