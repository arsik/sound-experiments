.Footer
  @extends .font-default
  position absolute
  bottom 10vh
  left 50%
  z-index 1
  transform translateX(-50%)
  color white
  font-size 0.9em
  letter-spacing 2px
  opacity 0

  a
    display inline-block

    &:hover:after
      transform-origin center left
      transform scaleX(1)

  a:after
    content ''
    display block
    position relative
    bottom -4px
    width 100%
    height 3px
    background white
    transition transform 0.5s ease-out-expo
    transform-origin center right
    transform scaleX(0)
