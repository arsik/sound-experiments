.Footer
  position fixed
  width 100%
  bottom 10vh
  z-index 1
  color white
  font-size 0.9em
  letter-spacing 2px

  &-social
    position absolute
    left 5.5vw

    li
      display inline-block
      width 17px
      height 17px
      margin-right 10px

      &:last-child
        margin-right 0

      &:hover svg
        opacity 0.4

    svg
      @extends .full-size
      fill white
      transition opacity 0.4s

      use
        fill inherit

  &-gobelins
    position absolute
    left 50%
    transform translateX(-50%)
    top -15px
    opacity 0.3

    span
      letter-spacing 3.5px

    svg
      position relative
      top 9px
      width 25px
      height 25px

  &-about
    position absolute
    top 0
    right 5.5vw
    display inline-block
    text-transform uppercase
    color white

    &:hover:after
      transform-origin center left
      transform scaleX(1)

    &:after
      content ''
      display block
      position relative
      bottom -4px
      width 100%
      height 3px
      background white
      transition transform 0.5s ease-out-expo
      transform-origin center right
      transform scaleX(0)
