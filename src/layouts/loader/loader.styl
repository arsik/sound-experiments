.Intro
  display flex
  align-items center
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  z-index 0

  &.noComplete
    z-index 99

  h1, p
    text-align center

  .Intro-content
    width 100%
    position relative
    padding-bottom 20vh

    h1
      font-size 2.5em
      letter-spacing 0.3em
      margin-bottom 2vh
      text-transform uppercase
      opacity 0

    p
      font-size 1em
      color #414141
      text-transform uppercase
      letter-spacing 4px
      font-weight 700
      opacity 0

  .Loader-container
    width 151px
    margin auto
    position relative

    > div
      position absolute
      left 0
      top 10vh

      .Loader
        border-radius 100%
        height 151px
        width 151px
        display flex
        align-items center
        opacity 0


        &::before
          content ''
          position absolute
          top 0
          left 0
          width 100%
          height 150px
          border-radius 100%
          border 1px solid #3a3737

        svg
          position absolute
          top 0
          left 0
          width 100%
          height 100%
          stroke #fff
          stroke-width 1
          stroke-dasharray 1000
          stroke-dashoffset 1000

        i
          text-align center
          font-size 1.5em
          width 100%

      p
        font-size 0.6em
        font-weight 300
        margin-top 3vh
        color #fff
        letter-spacing 0.1em
        opacity 0

        span
          font-weight 700


