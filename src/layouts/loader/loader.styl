.Intro
  display flex
  align-items center
  width 100%
  height 100%

  h1, p
    text-align center

  .Intro-content
    width 100%
    position relative
    padding-bottom 20vh
    
  h1
    font-size 2.5em
    letter-spacing 0.3em
    margin-bottom 2vh
  
  p
    font-size 1em
    color #414141
    text-transform uppercase
    letter-spacing 4px
    font-weight 700
  
  .Loader-container
    width 25vh
    margin auto
    position relative

    
    .Loader
      position absolute
      left 0
      top 10vh
      border-radius 100%
      border 3px solid #fff
      height 25vh
      display flex
      align-items center
      
    
    